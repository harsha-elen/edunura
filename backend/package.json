{
    "name": "lms-backend",
    "version": "1.0.0",
    "description": "Learning Management System Backend - Modular Monolithic Architecture",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "db:setup": "ts-node src/scripts/setupDatabase.ts",
        "db:seed": "ts-node src/scripts/seedAdminUser.ts",
        "db:migrate": "node dist/database/migrate.js",
        "db:migrate-file-path": "ts-node src/scripts/addFilePathColumn.ts",
        "db:migrate-start-time": "ts-node src/scripts/addStartTimeColumn.ts",
        "db:add-instructors": "ts-node src/scripts/addInstructorsColumn.ts"
    },
    "keywords": [
        "lms",
        "education",
        "learning"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "aws-sdk": "^2.1505.0",
        "axios": "^1.6.2",
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.6.5",
        "nodemailer": "^6.9.7",
        "pdfkit": "^0.14.0",
        "razorpay": "^2.9.2",
        "sequelize": "^6.35.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.5",
        "@types/nodemailer": "^6.4.14",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "nodemon": "^3.0.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
